.row
  .col
    %h1 Incoming Webmentions

.row
  .col

    - if @webmentions.count == 0
      %strong
        No webmentions yet.

    %table.table.table-striped
      %tr
        %th
        %th
          Source IP
        %th
          Source
        %th
          Target
        %th
    
      - @webmentions.each do |webmention|
        %tr
          %td
            #{webmention.created_at}
          %td
            #{webmention.ip_address}
          %td
            #{webmention.source_url}
          %td
            #{webmention.target_url}
          %td
            = link_to "Destroy", admin_webmention_path( webmention ), method: :delete, class: "text-danger"

.row
  .col
    = paginate @webmentions